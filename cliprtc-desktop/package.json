{
    "name": "cliprtc-desktop",
    "version": "1.0.0",
    "description": "Cross-platform WebRTC clipboard sync desktop application",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build": "electron-builder",
        "build:mac": "electron-builder --mac",
        "build:win": "electron-builder --win",
        "build:all": "electron-builder --mac --win"
    },
    "keywords": [
        "clipboard",
        "sync",
        "webrtc",
        "electron"
    ],
    "author": "ClipRTC",
    "license": "MIT",
    "dependencies": {
        "@roamhq/wrtc": "^0.9.1",
        "electron-store": "^8.1.0",
        "qrcode": "^1.5.4",
        "simple-peer": "^9.11.1",
        "ws": "^8.14.2"
    },
    "devDependencies": {
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.cliprtc.desktop",
        "productName": "ClipRTC",
        "directories": {
            "buildResources": "build",
            "output": "dist"
        },
        "mac": {
            "category": "public.app-category.utilities",
            "target": [
                "dmg",
                "zip"
            ],
            "icon": "build/icon.icns"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "build/icon.ico"
        },
        "files": [
            "main.js",
            "src/**/*",
            "package.json"
        ]
    }
}
